<%# Log in page %>
<div class='center grey-box'>
  <h1>Agency Login</h1>

  <% if @tour.errors.any? %>
  <div id="error_explanation">
    <h5><%= pluralize(@tour.errors.count, "error") %> prohibited this tour from being saved:</h5>
 
    <ul>
    <% @tour.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<br>
  <%= form_tag(login_path) do%>
    <h5>Agency Name</h5>
    <%= collection_select(:agency, :id, Agency.all, :id, :name, prompt: true) %>

    <h5>Password:</h5>
    <%= password_field_tag "password" %>
    
    <br><br>
    <%= submit_tag "Sign In"%>
  <%end%>

  <br>
  <%= link_to "Log In via Google", 'auth/google_oauth2', class: 'btn' %>
  <%= link_to "New agency? Create an account!", signup_path, class: 'btn' %>
</div>