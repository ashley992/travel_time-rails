<div class='grey-box center'>
  <h1>Edit <%= @customer.full_name %></h1>
  
  <%= form_for(@customer) do |f| %>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %><br><br>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %><br><br>

  <%= f.label :email %>
  <%= f.email_field :email %><br><br>

  <%= f.label :phone_number %>
  <%= f.telephone_field :phone_number %><br><br>

  <%= f.label :city %>
  <%= f.text_field :city %><br><br>

  <%= f.label :country %>
  <%= f.text_field :country %><br><br>

  <%= f.label :language %>
  <%= f.text_field :language %><br><br>

  <%= f.label :tours %>:<br>
  <%= f.collection_check_boxes(:tour_ids, Tour.all, :id, :title) do |b| %>
      <%= b.label class:"checkbox" do%>
         <%=b.check_box + b.text%>
      <%end%>
  <%end%>

  <br>
  <%= f.submit %>
<% end %>

</div>